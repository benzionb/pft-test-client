{
  "name": "pft-cli-client",
  "version": "0.1.0",
  "description": "Programmatic CLI client for the Post Fiat Task Node - enables automated task discovery, acceptance, evidence submission, and verification handling",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:test": "tsc -p tsconfig.test.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run test/e2e_task_loop.test.ts --timeout 600000",
    "test:e2e:watch": "vitest test/e2e_task_loop.test.ts --timeout 600000",
    "setup": "npx tsx scripts/setup.ts",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "pft-cli": "dist/cli.js"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "post-fiat",
    "pft",
    "task-node",
    "cli",
    "xrpl",
    "ipfs",
    "blockchain",
    "ai-agents"
  ],
  "author": "Post Fiat Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benzionb/pft-test-client.git"
  },
  "homepage": "https://github.com/benzionb/pft-test-client#readme",
  "bugs": {
    "url": "https://github.com/benzionb/pft-test-client/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "xrpl": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "typescript": "^5.7.3",
    "vitest": "^2.1.3"
  }
}
